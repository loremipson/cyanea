{
  "name": "cyanea",
  "version": "2.0.1",
  "description": "Generate systematic color palettes with automatic light/dark modes from any input color using OKLCH",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./css/*": "./css/*"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "css"
  ],
  "author": "Tyler Ipson <tyler.ipson@gmail.com>",
  "repository": "github:loremipson/cyanea",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "tsup",
    "build:css": "node scripts/generate-css.js",
    "start": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": true
      }
    ]
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "color",
    "palette",
    "generator",
    "theme",
    "spectrum",
    "oklch"
  ]
}
